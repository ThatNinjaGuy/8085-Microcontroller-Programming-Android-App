<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vishalgautam.a8085emulator.Instructions"
    android:background="@color/background"
    android:padding="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage Instructions"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="15dip"
                android:textStyle="italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/colorPrimary"
                android:layout_margin="5dip"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:padding="5dip"
                android:textColor="@color/colorPrimaryDark"
                android:text="Emulator"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EmulatorInstructions"
                android:layout_marginTop="5dip"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:padding="5dip"
                android:textColor="@color/colorPrimaryDark"
                android:text="Sample Codes And Tutorials"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/OtherInstructions"
                android:layout_marginTop="5dip"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
